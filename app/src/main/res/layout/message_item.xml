<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/blue_500"
        android:padding="14dp"
        android:text="@string/sample_message"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layout_bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_below="@id/user_message"
        android:background="@drawable/bot_round_box"
        android:backgroundTint="@color/gray"
        android:padding="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:id="@+id/bot_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/user_message"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/kenari_chatbot"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kenari"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/bot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_message"
            android:layout_alignParentStart="true"
            android:background="@drawable/bot_round_box"
            android:text="Halo semuajaskdjasdkjaskahdkajhdka lkaksdasjd aksdhkjas kashdjas"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
